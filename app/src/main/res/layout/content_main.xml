<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/main_bg"
    tools:context="com.joanna.footmessage.views.activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:layout_marginBottom="-10dp"
            android:src="@drawable/cute"
            android:scaleType="fitCenter"
            android:id="@+id/memberImg"
            android:elevation="10dp"
            tools:targetApi="lollipop" />

        <Button
            android:id="@+id/userInfoBtn"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="@drawable/shape_rectangle"
            android:onClick="onUserInfoBtnClick"
            android:text="@string/member"
            android:textSize="18sp"/>
    </LinearLayout>
    

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_alignLeft="@id/diagnosisBtn"
            android:layout_alignStart="@id/diagnosisBtn"
            android:layout_marginLeft="-70dp"
            android:layout_marginStart="-70dp"
            android:src="@drawable/diagnosis"
            android:scaleType="fitCenter"
            android:id="@+id/diagnosisImg"
            android:elevation="10dp"
            tools:targetApi="lollipop" />

        <Button
            android:id="@+id/diagnosisBtn"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/shape_rectangle"
            android:onClick="onDiagnosisBtnClick"
            android:text="@string/diagnosis"
            android:textSize="18sp" />

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/healthInfoBtn"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/shape_rectangle"
            android:onClick="onHealthInfoBtnClick"
            android:text="@string/health"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:layout_alignRight="@id/healthInfoBtn"
            android:layout_marginRight="-80dp"
            android:layout_marginEnd="-80dp"
            android:src="@drawable/health"
            android:scaleType="fitCenter"
            android:id="@+id/healthImg"
            android:layout_alignEnd="@id/healthInfoBtn"
            android:elevation="10dp"
            tools:targetApi="lollipop"/>
    </RelativeLayout>

</LinearLayout>

