<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.joanna.footmessage.views.activities.MainActivity">

    <ImageView
        android:layout_width="280dp"
        android:layout_height="220dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/pic1" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow>

            <Button
                android:id="@+id/userInfoBtn"
                android:layout_width="130dp"
                android:layout_height="90dp"
                android:layout_column="0"
                android:background="@drawable/shape_rectangle"
                android:onClick="onUserInfoBtnClick"
                android:text="@string/member"
                android:textSize="18sp" />

            <Button
                android:id="@+id/diagnosisBtn"
                android:layout_width="130dp"
                android:layout_height="90dp"
                android:layout_column="1"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/shape_rectangle"
                android:onClick="onDiagnosisBtnClick"
                android:text="@string/diagnosis"
                android:textSize="18sp" />

        </TableRow>

        <TableRow android:layout_marginTop="20dp">

            <Button
                android:id="@+id/healthInfoBtn"
                android:layout_width="130dp"
                android:layout_height="90dp"
                android:layout_column="0"
                android:background="@drawable/shape_rectangle"
                android:onClick="onHealthInfoBtnClick"
                android:text="@string/health"
                android:textSize="18sp" />

            <Button
                android:id="@+id/userDiagnosticRecordBtn"
                android:layout_width="130dp"
                android:layout_height="90dp"
                android:layout_column="1"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/shape_rectangle"
                android:onClick="onDiagnosticRecordBtnClick"
                android:text="@string/record"
                android:textSize="18sp" />
        </TableRow>

    </TableLayout>
</LinearLayout>

